<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/colorPrimary"
              android:orientation="vertical">



    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18sp"

            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OE:"/>

        <Spinner

            android:layout_gravity="center"
            android:id="@+id/oeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </Spinner>
    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Begindatum:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">


        <EditText
            android:nextFocusDown="@+id/inputRapportageBeginMaand"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/inputRapportageBeginDag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ems="10"
            android:gravity="center"
            android:hint="DD"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:nextFocusDown="@+id/inputRapportageBeginJaar"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/inputRapportageBeginMaand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ems="10"
            android:gravity="center"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:nextFocusDown="@+id/inputRapportageEindDag"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/inputRapportageBeginJaar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ems="10"
            android:gravity="center"
            android:hint="JJJJ"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

    <TextView

        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Einddatum:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        >


        <EditText
            android:nextFocusDown="@+id/inputRapportageEindMaand"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/inputRapportageEindDag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ems="10"
            android:gravity="center"
            android:hint="DD"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:nextFocusDown="@+id/inputRapportageEindJaar"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/inputRapportageEindMaand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:ems="10"
            android:gravity="center"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:backgroundTint="@color/colorAccent"
            android:layout_weight="0.33"
            android:id="@+id/inputRapportageEindJaar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="JJJJ"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:textColor="#FFFFFF"
        android:layout_margin="30dp"
        android:background="@drawable/login_button_shape"
        android:id="@+id/inputRapportageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Rapportages opvragen" />
    <ProgressBar
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progressBarRapportage"
        />

</LinearLayout>